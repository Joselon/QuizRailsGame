<%= turbo_stream_from "room_#{@room.id}" %>
<div class="room-header">
  <h1>Sala: <%= @room.name %></h1>
  <%= link_to "Volver a Salas", rooms_path %>  
</div>
<div class="players">
  <h2>Jugadores</h2>
  <div id="players">
    <%= render :partial => 'players_list', locals: { room: @room, current_user: current_user } %>
  </div>
</div>
<div class="current_user_actions" id="current_user_actions">
  <%= render :partial => 'current_user_actions', locals: { room: @room, current_user: current_user } %>
</div>

<% if @room.playing? %> 
  <div id="question-box">
    <%= render :partial => 'question_box', locals: { room: @room, current_user: current_user } %>
  </div>
<% end %>

<div class="status-panel">
  <h3>Estado de la sala</h3>
  <div id="status-panel">
    <%= render partial: "rooms/status_panel", locals: { room: @room, current_user: current_user } %>
  </div>
</div>
